{
  "compilerOptions": {
    "target": "es6",

    "jsx": "preserve",
    "jsxImportSource": "jsx-dom",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
